#banner.carousel.slide(data-ride="carousel")
  ol.carousel-indicators
    li.active(data-target='#banner' data-slide-to="0")
    li(data-target='#banner' data-slide-to="1")
    li(data-target='#banner' data-slide-to="2")
  .carousel-inner(role='listbox')
    for item,i in focusImg
      if i == "0"
        .item.active
          img(src="#{item.bannerSrc}" width="100%" alt='')
          .carousel-caption
            h3= item.name
            p= item.text
      else
        .item
          img(src="#{item.bannerSrc}" width="100%" alt='')
          .carousel-caption
            h3= item.name
            p= item.text
